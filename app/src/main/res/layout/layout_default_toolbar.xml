<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@id/default_tool_bar_left_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:contentDescription="@null"
        android:paddingTop="@dimen/default_toolbar_imageview_padding"
        android:paddingBottom="@dimen/default_toolbar_imageview_padding"
        android:paddingRight="@dimen/default_toolbar_imageview_padding"
        android:paddingLeft="@dimen/default_toolbar_imageview_padding"
        />

    <TextView

        android:id="@id/tool_bar_title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="@dimen/default_toolbar_textview_padding"
        android:textSize="@dimen/default_toolbar_textview_text_size"/>

    <ImageView

        android:id="@id/default_tool_bar_right_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:contentDescription="@null"
        android:paddingTop="@dimen/default_toolbar_imageview_padding"
        android:paddingBottom="@dimen/default_toolbar_imageview_padding"
        android:paddingLeft="@dimen/default_toolbar_imageview_padding"
        android:paddingRight="@dimen/default_toolbar_imageview_padding_right"
        />


</RelativeLayout>