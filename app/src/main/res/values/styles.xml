<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <!--Login and Register pages styles.-->
    <style name="editTextLoginStyle">
        <item name="android:layout_width">@dimen/base_line_login_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColorHint">@color/basic_junior_text_black</item>
        <item name="android:textColor">@color/basic_orange</item>
        <item name="android:textSize">@dimen/edit_text_login_text_size</item>
        <item name="android:background">@null</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="buttonLoginRegisterStyle">
        <item name="android:layout_height">@dimen/button_login_register_height</item>
        <item name="android:layout_width">@dimen/button_login_register_width</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@drawable/selector_button_background_login</item>
        <item name="android:textSize">@dimen/button_login_register_text_size</item>
        <item name="android:textColor">@color/white10</item>
        <item name="android:enabled">false</item>
    </style>

    <style name="textViewLoginStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/basic_junior_text_black</item>
        <item name="android:textSize">@dimen/edit_text_login_text_size</item>
    </style>

    <!--Detail page styles.-->
    <style name="tagTextViewFlipperDetailStyle">
        <item name="android:textSize">@dimen/detail_tag_text_size</item>
        <item name="android:textColor">@color/white_text_tag</item>
        <item name="android:background">@drawable/shape_text_of_image_bg</item>
    </style>

    <style name="titleTextViewDetailStyle">
        <item name="android:textSize">@dimen/detail_title_text_size</item>
        <item name="android:textColor">@color/basic_orange</item>
        <item name="android:lineSpacingExtra">@dimen/detail_line_sqacing_extra</item>
    </style>

    <style name="textTextViewDetailStyle">
        <item name="android:textSize">@dimen/detail_text_text_size</item>
        <item name="android:textColor">@color/basic_text_black</item>
        <item name="android:lineSpacingExtra">@dimen/detail_line_sqacing_extra</item>
    </style>

    <style name="smallTitleTextViewDetailStyle">
        <item name="android:textSize">@dimen/detail_tag_text_size</item>
        <item name="android:textColor">@color/grey_small_title</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineSpacingExtra">@dimen/detail_line_sqacing_extra</item>
    </style>

    <style name="dataTextViewDetailStyle">
        <item name="android:textSize">@dimen/detail_data_text_size</item>
        <item name="android:textColor">@color/basic_orange</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineSpacingExtra">@dimen/detail_line_sqacing_extra</item>
    </style>

    <style name="infoTextViewDetailStyle">
        <item name="android:textSize">@dimen/detail_data_text_size</item>
        <item name="android:textColor">@color/basic_text_black</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineSpacingExtra">@dimen/detail_line_sqacing_extra</item>
    </style>

    <style name="wannaJoinButtonStyle">
        <item name="android:textSize">@dimen/detail_title_text_size</item>
        <item name="android:background">@color/orange_button</item>
        <item name="android:textColor">@color/white_text_tag</item>
        <item name="android:lineSpacingExtra">@dimen/detail_line_sqacing_extra</item>
    </style>

    <style name="tabCommentTextViewAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/detail_data_text_size</item>
    </style>

    <style name="askQuestionDetailHint">
        <item name="android:textColorHint">@color/basic_orange</item>
        <item name="android:textSize">@dimen/detail_tag_text_size</item>
        <item name="android:paddingStart">@dimen/detail_ask_background_padding</item>
        <item name="android:lineSpacingExtra">@dimen/detail_line_sqacing_extra</item>
    </style>

    <style name="joinDetailTextView">
        <item name="android:textSize">@dimen/detail_fra_join_text_size</item>
        <item name="android:textColor">@color/purple_fra_join</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineSpacingExtra">@dimen/detail_line_sqacing_extra</item>
    </style>

    <style name="commentTimeTextView">
        <item name="android:textSize">@dimen/detail_fra_join_text_size</item>
        <item name="android:textColor">@color/grey_comment_time</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineSpacingExtra">@dimen/detail_line_sqacing_extra</item>
    </style>

</resources>
